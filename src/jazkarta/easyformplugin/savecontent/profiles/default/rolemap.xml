<?xml version="1.0"?>
<rolemap>
  <roles>
    <role name="Easyform Orders Accessor"/>
  </roles>
  <permissions>
    <permission acquire="True"
                name="jazkarta.easyformplugin.savecontent: Add Save Content Actions">
      <role name="Manager" />
      <role name="Owner" />
      <role name="Site Administrator" />
    </permission>
    <permission acquire="True"
                name="jazkarta.easyformplugin.savecontent: View Saved Content">
      <role name="Manager" />
      <role name="Owner" />
      <role name="Reader" />
      <role name="Reviewer" />
      <role name="Site Administrator" />
    </permission>
    <permission acquire="False"
                name="jazkarta.easyformplugin.savecontent: Edit Hidden Fields">
        <!-- We don't allow editing of hidden fields for now-->
    </permission>
  </permissions>
</rolemap>
